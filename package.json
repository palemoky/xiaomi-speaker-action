{
  "name": "xiaomi-speaker-action",
  "version": "1.0.3",
  "description": "GitHub Action for sending notifications via Xiaomi Speaker",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "bun build src/index.ts --outfile=dist/index.js --target=node --minify",
    "dev": "bun run src/index.ts",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "test:coverage": "bun test --coverage",
    "format": "prettier --write 'src/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts'"
  },
  "keywords": [
    "github-action",
    "xiaomi",
    "speaker",
    "notification",
    "tts",
    "ci-cd"
  ],
  "author": "palemoky",
  "license": "MIT",
  "engines": {
    "bun": ">=1.3.4"
  },
  "dependencies": {
    "@actions/core": "^2.0.1",
    "@actions/github": "^6.0.1"
  },
  "devDependencies": {
    "@types/bun": "^1.3.4",
    "@types/node": "^25.0.3",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3"
  }
}
